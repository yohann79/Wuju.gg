<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreerChampion">

    <EditText
        android:id="@+id/creerNomChampion"
        android:layout_width="174dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:text="nom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.734"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/creerDescriptionChampion"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="52dp"
        android:text="description"
        app:layout_constraintTop_toBottomOf="@+id/creerNomChampion"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/creerCompetenceA"
        android:layout_width="174dp"
        android:layout_height="52dp"
        android:layout_marginTop="23dp"
        android:text="competenceA"
        app:layout_constraintTop_toBottomOf="@+id/creerDescriptionChampion"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/creerCompetenceZ"
        android:layout_width="174dp"
        android:layout_height="52dp"
        android:layout_marginTop="23dp"
        android:text="competenceZ"
        app:layout_constraintTop_toBottomOf="@+id/creerCompetenceA"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/creerCompetenceE"
        android:layout_width="174dp"
        android:layout_height="52dp"
        android:layout_marginTop="23dp"
        android:text="competence E"
        app:layout_constraintTop_toBottomOf="@+id/creerCompetenceZ"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/creerCompetenceR"
        android:layout_width="174dp"
        android:layout_height="52dp"
        android:layout_marginTop="23dp"
        android:text="competence R"
        app:layout_constraintTop_toBottomOf="@+id/creerCompetenceE"
        tools:layout_editor_absoluteX="0dp" />


    <EditText
        android:id="@+id/creerPassif"
        android:layout_width="174dp"
        android:layout_height="52dp"
        android:layout_marginTop="23dp"
        android:text="passif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/creerCompetenceR"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/validerCreer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/retourArriereCreer"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toEndOf="@+id/creerCompetenceR"
        app:layout_constraintTop_toBottomOf="@+id/roleList"
        app:layout_constraintVertical_bias="0.53" />

    <Button
        android:id="@+id/retourArriereCreer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Retour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/creerCompetenceR"
        app:layout_constraintTop_toBottomOf="@+id/roleList"
        app:layout_constraintVertical_bias="0.53" />

    <ImageView
        android:id="@+id/iconCreerChampion"
        android:layout_width="90dp"
        android:layout_height="99dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/creerDescriptionChampion"
        app:layout_constraintEnd_toStartOf="@+id/creerNomChampion"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <Spinner
        android:id="@+id/roleList"
        android:layout_width="208dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/creerCompetenceA"
        app:layout_constraintTop_toBottomOf="@+id/creerDescriptionChampion" />


</androidx.constraintlayout.widget.ConstraintLayout>